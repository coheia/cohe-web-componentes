{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "declaration": true,
    "baseUrl": "./src",
    "outDir": "dist",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "paths": {
      "@coheia/simple-webcomponents/*": ["./components/*"]
    },
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
  ],
  "exclude": ["node_modules", "dist", "src/stories**/*.stories.ts"]
}
