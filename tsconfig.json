{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "declaration": true,
    "baseUrl": "./src",
    "outDir": "dist",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "paths": {
      "@coheia/simple-webcomponents/*": ["./components/*"]
    },
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "!src/**/*.stories.ts",
  ],
  "exclude": [
      "node_modules",
      "**/node_modules/*",
      "./.storybook/**/*",
      "./stories/**/*"
  ]
}
