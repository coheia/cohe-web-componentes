{
  "name": "@coheia/simple-webcomponents",
  "version": "1.0.9",
  "description": "A library of web components",
  "main": "dist/index.js",
  "type": "module",
  "author": {
    "name": "Felipe Correia"
  },
  "scripts": {
    "build": "wireit",
    "build:css-to-ts": "wireit",
    "build:sass": "wireit",
    "watch:sass": "wireit",
    "dev": "wireit"
  },
  "wireit": {
    "dev": {
      "command": "concurrently \"rollup -c -w\" \"yarn watch:sass\" \"yarn build:css-to-ts --watch\""
    },
    "build": {
      "command": "rollup -c",
      "dependencies": [
        "build:css-to-ts"
      ]
    },
    "build:sass": {
      "command": "sass --style=compressed --load-path=node_modules --load-path=node_modules/sass-true/sass $(ls -d */ | grep -v node_modules)",
      "files": [
        "**/*.scss"
      ],
      "output": [
        "**/*.css",
        "**/*.css.map"
      ]
    },
    "build:css-to-ts": {
      "command": "find . \\( -path ./.wireit -o -path ./node_modules \\) -prune -o -name '*.css' -print | xargs node css-to-ts.js",
      "files": [
        "css-to-ts.js",
        "**/*.scss"
      ],
      "output": [
        "**/*.css.ts"
      ],
      "dependencies": [
        "build:sass"
      ]
    },
    "watch:sass": {
      "command": "sass --style=compressed --watch --load-path=node_modules --load-path=node_modules/sass-true/sass $(ls -d */ | grep -v node_modules)",
      "files": [
        "**/*.scss"
      ],
      "output": [
        "**/*.css",
        "**/*.css.map"
      ],
      "dependencies": [
        "build:css-to-ts"
      ]
    }
  },
  "license": "BSD-3-Clause",
  "private": false,
  "dependencies": {
    "lit": "^2.6.1",
    "tslib": "^2.5.0"
  },
  "devDependencies": {
    "sass": "^1.58.0",
    "sass-true": "^7.0.0",
    "concurrently": "^7.6.0",
    "glob": "^8.1.0",
    "wireit": "^0.9.5",
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-multi-entry": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-terser": "^0.4.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "esbuild": "^0.17.8",
    "rollup": "^3.15.0",
    "rollup-plugin-styles": "^4.0.0",
    "typescript": "^4.9.4"
  }
}
