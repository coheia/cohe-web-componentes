{
  "name": "@coheia/simple-webcomponents",
  "version": "1.0.9",
  "description": "Develop, document and distribute web components in an automated way.",
  "main": "dist/index.js",
  "type": "module",
  "author": {
    "name": "Felipe Correia"
  },
  "customElements": "custom-elements.json",
  "scripts": {
    "dev": "wireit",
    "build": "wireit",
    "build:css-to-ts": "wireit",
    "build:sass": "wireit",
    "storybook": "storybook dev -p 3002",
    "build:storybook": "storybook build",
    "build:elements-type": "wireit",
    "clean": "rm -rf dist",
    "clean:all": "rm -rf node_modules && npm run clean"
  },
  "wireit": {
    "dev": {
      "command": "concurrently -p \"[{name}]\" -n \"CSS,VITE,DOCS\" -c \"bgBlue.bold,bgGreen.bold,bgYellow.bold\" \"npm run build:css-to-ts --watch\" \"vite build --watch --mode development\" \"npm run build:elements-type --watch\""
    },
    "build": {
      "command": "vite build --mode production",
      "dependencies": [
        "build:css-to-ts",
        "build:elements-type",
        "build:storybook"
      ]
    },
    "build:css-to-ts": {
      "command": "find . \\( -path ./.wireit -o -path ./node_modules \\) -prune -o -name '*.css' -print | xargs node css-to-ts.js",
      "files": [
        "css-to-ts.js",
        "**/*.scss"
      ],
      "output": [
        "**/*.css.ts"
      ],
      "dependencies": [
        "build:sass"
      ]
    },
    "build:sass": {
      "command": "sass --style=compressed --load-path=node_modules --load-path=node_modules/sass-true/sass $(ls -d */ | grep -v node_modules)",
      "files": [
        "**/*.scss"
      ],
      "output": [
        "**/*.css",
        "**/*.css.map"
      ]
    },
    "build:elements-type": {
      "command": "wca analyze 'src/components/**/swc-+([a-z]).ts' --format json --outFile custom-elements.json",
      "files": [
        "src/components/**/*.ts",
        "!src/components/**/*.css.ts"
      ],
      "output": [
        "custom-elements.json"
      ]
    }
  },
  "license": "BSD-3-Clause",
  "private": false,
  "dependencies": {
    "custom-elements-manifest": "^2.0.0",
    "lit": "^2.6.1",
    "tslib": "^2.5.0",
    "vite": "^4.1.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-multi-entry": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-terser": "^0.4.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@storybook/addon-essentials": "^7.0.0-beta.48",
    "@storybook/addon-links": "^7.0.0-beta.48",
    "@storybook/blocks": "^7.0.0-beta.48",
    "@storybook/web-components": "^7.0.0-beta.48",
    "@storybook/web-components-vite": "^7.0.0-beta.48",
    "concurrently": "^7.6.0",
    "esbuild": "^0.17.8",
    "glob": "^8.1.0",
    "lit-html": "^2.6.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^3.15.0",
    "sass": "^1.58.0",
    "sass-true": "^7.0.0",
    "storybook": "^7.0.0-beta.48",
    "typescript": "^4.9.4",
    "vite-plugin-static-copy": "^0.13.1",
    "web-component-analyzer": "^2.0.0-next.4",
    "wireit": "^0.9.5"
  }
}
